<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.piworks.build1">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionbar">
        <activity android:name=".MainActivity" />
        <activity
            android:name=".popup"
            android:theme="@style/popupstyle" />
        <activity android:name=".startscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".popup_get_amount"
            android:theme="@style/popupstyle" />
        <activity android:name=".settings" />
        <activity
            android:name=".popup_timepicker"
            android:theme="@style/popupstyle" />

        <receiver
            android:name=".MyReceiver_notification"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="piworks.build1.reminder" />
            </intent-filter>
        </receiver>
    </application>

</manifest>